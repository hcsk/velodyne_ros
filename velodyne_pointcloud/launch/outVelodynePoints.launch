<launch>
  <arg name="bag_name" default="" />
  <arg name="dir_name" default="/home/zrf/data/pcd_data/" />
  <arg name="folder_name" default="0629/" />
  <arg name="topic_name" default="horizontal/velodyne_points" />

  <param name="/use_sim_time" value="true" />

  <node name="playbag" pkg="rosbag" type="play"
   args="--clock $(arg bag_name)" >
  </node>

  <node name="my_pcd" pkg="pcl_ros" type="pointcloud_to_pcd"  output="screen" >
	<remap from="input" to="$(arg topic_name)" />
	<param name="prefix" type="string" value= "$(arg dir_name)$(arg folder_name)" />
  </node>
</launch>
